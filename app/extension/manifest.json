{
  "manifest_version": 3,
  "name": "Yakoa Scanner Extension",
  "version": "1.0",
  "description": "Scan konten web dengan Yakoa API via backend Next.js",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "page.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
